{{!< ../default}}

<div class="site signin flex flex-cc">
  {{#if @member}}
    {{!-- Logged in: Redirect to home --}}
    <script>window.location = '{{@site.url}}';</script>
  {{else}}
    {{#page}}
      {{#if feature_image}}
        <div class="site__cover">
          <img class="lazyload"
            data-srcset="{{img_url feature_image size="s"}} 300w,
                        {{img_url feature_image size="m"}} 600w,
                        {{img_url feature_image size="l"}} 1000w,
                        {{img_url feature_image size="xl"}} 2000w"
            srcset="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw=="
            data-sizes="auto"
            data-src="{{img_url feature_image size="m"}}"
            src="{{img_url feature_image size="xxs"}}"
            alt="{{title}}"
          />
        </div>
      {{/if}}
    {{/page}}
    <div class="site__inner">
      <a href="/" class="site__brand">
        {{!-- Add logo or title --}}
        {{#if @site.logo}}
          {{!-- Site logo --}}
          <img class="site__logo" 
            src="{{img_url @site.logo size="s"}}"
            alt="{{@site.title}}"/>
        {{else}}
          {{!-- Site Title --}}
          {{@site.title}}
        {{/if}}
      </a>

      <div class="site__content shadow">
        {{!-- Not logged in: Signin form --}}
        <h1 class="site__title">{{#page}}{{title}}{{else}}{{t "Sign in"}}{{/page}}</h1>
        <p id="form-input-label">{{t "Sign into your account again for full access."}}</p>
        {{> subscribe-form form_type="signin" button_text=(t 'Send login link')}}
        <p class="m-t-lg m-0 text-center">
          <small>{{t "Don't have an account yet?"}} <a href="/signup/">{{t "Sign up"}}</a></small>
        </p>
      </div>
    </div>
  {{/if}}
</div>