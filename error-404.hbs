{{!< default}}

{{!-- Page 404 --}}
<div class="page__hdr flex flex-cc flex-col m-b-lg">
  <h1 class="m-b-xs">{{statusCode}} - {{message}}</h1>
  <div class="err m-b">
    <div class="err__descr m-b color-txt-acc-3 text-center">
      {{t "Something went wrong! We can't seem to find the page you are looking for."}}
    </div>

    {{!-- Links to home and contact page --}}
    <div class="err__links flex flex-cc">
      <a class="btn btn--filled btn--rounded m-r" href="/">
        {{t "Home"}}
      </a>
      <a class="btn btn--filled btn--rounded" href="javascript:history.back()">
        {{t "Back"}}
      </a>
    </div>
  </div>
</div>

<div class="container wrapper">
  <div class="err__recommend">
    <div class="section__title m-b">{{t "Latest posts"}}</div>
    
    {{#get "posts" limit="3" include="tags,authors"}}
      {{#if posts}}
        <div class="row m-b-lg">
          {{#foreach posts}}
            <div class="col-xs-12 col-md-6 col-lg-4">
              {{> post-card class="h-100"}}
            </div>
          {{/foreach}}
        </div>
      {{/if}}
    {{/get}}
  </div>
</div>